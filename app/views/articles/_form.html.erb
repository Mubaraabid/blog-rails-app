<div class="container py-5">
  <div class="flex space-x-4 font-sans font-bold text-base  justify-content-end">
      <%= link_to "Back", authenticated_root_path, class: "text-decoration-none text-black " %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'text-decoration-none text-black ' %>
  </div>

  <div class="py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="d-flex justify-content-center">
          <div class="bg-gray-600 rounded-md shadow-lg p-5 w-full">
            <%= form_with model: article do |form| %>
              <div data-controller="image-cropping" class="mt-2">
                <div class="mt-2">
                    <%= form.label :title, class: 'form-label text-base font-sans font-bold' %><br>
                    <%= form.text_field :title, class: 'form-control', placeholder: "Title" %>
                    <% article.errors.full_messages_for(:title).each do |message| %>
                      <div class="error-message"><%= message %></div>
                    <% end %>
                </div>

                <div class="mt-4">
                    <%= form.label :Description, class: 'form-label text-base font-sans font-bold' %><br>
                    <%= form.text_area :body, class: 'form-control', placeholder: "Tell your story..." , rows: 6 %>
                    <br>
                    <% article.errors.full_messages_for(:body).each do |message| %>
                      <div class="error-message"><%= message %></div>
                    <% end %>
                </div>

                <div>
                    <%= form.label :image, style: "display: block", class: 'text-base font-sans font-bold pb-2' %>
                    <%= form.file_field :image,
                        data: {
                          action: "change->image-cropping#imageSelected"
                        } %>

                    <div class="mt-3 ">
                        <%= image_tag "",
                            data: { image_cropping_target: "image" },
                            style: "max-width: 100%; display: none;", class: "w-5 h-50" %>
                    </div>
                        <%= form.hidden_field :crop_x, data: { image_cropping_target: "x" } %>
                        <%= form.hidden_field :crop_y, data: { image_cropping_target: "y" } %>
                        <%= form.hidden_field :crop_width, data: { image_cropping_target: "width" } %>
                        <%= form.hidden_field :crop_height, data: { image_cropping_target: "height" } %>
                </div>
                <div class="flex justify-content-end">
                    <%= form.submit "Publish", class: "rounded-md bg-green-100 text-decoration-none py-2 px-4 text-center text-white hover:bg-green-300 mt-2 text-sm shadow-md" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
