<div class="container custom pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="d-flex justify-content-center">
        <div class="form-container">
          <h2 class="d-flex justify-content-center">Forgot your password?</h2>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

          <div class="field mt-3 px-4" style="font-size: 14px;">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, class: 'form-control ', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions mt-4 px-4">
            <%= f.submit "Send me reset password instructions", class: "btn btn-outline-success w-100" %>
          </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>